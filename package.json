{
  "name": "zedom-creator",
  "version": "0.1.0-alpha.1",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "version": "pnpm build && git add dist",
    "prepublishOnly": "pnpm test:run && pnpm lint:check",
    "publish:patch": "npm version patch && cd dist && npm publish",
    "publish:minor": "npm version minor && cd dist && npm publish",
    "publish:major": "npm version major && cd dist && npm publish",
    "publish:dry": "cd dist && npm pack --dry-run",
    "release": "node scripts/release.js",
    "release:dry": "node scripts/release.js --dry",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@rollup/plugin-typescript": "12.1.4",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "1.2.5",
    "@types/node": "24.0.15",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "conventional-changelog-cli": "^5.0.0",
    "enquirer": "^2.4.1",
    "eslint": "9.31.0",
    "execa": "9.6.0",
    "fs-extra": "11.3.0",
    "lint-staged": "^16.1.2",
    "minimist": "1.2.8",
    "picocolors": "^1.1.1",
    "rollup": "4.45.1",
    "rollup-plugin-esbuild": "6.2.1",
    "rollup-plugin-typescript2": "0.36.0",
    "semver": "^7.7.2",
    "simple-git-hooks": "^2.13.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "vitepress": "1.6.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
